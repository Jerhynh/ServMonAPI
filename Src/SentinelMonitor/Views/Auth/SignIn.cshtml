
@{
    ViewData["Title"] = "Login";
    @model SentinelMonitor.Models.AuthModel;
}

<div class="text-center">
    <h1>Welcome back!</h1>
    <hr/>
    <h3>Please sign in below</h3>
</div>

<div class="text-center">
        @using (Html.BeginForm("AuthUser", "Auth", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div>
                <p>Username: </p> @Html.TextBoxFor(model => model.Username)
            </div>

            <br />

            <div>
                <p>Password: </p> @Html.PasswordFor(model => model.Password)
            </div>

            <br />

            <button class="btn btn-primary btn-rounded" type="submit">Login</button>
        }
        <label>@ViewBag.LoginStatus</label>
    </div>

